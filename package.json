{
  "name": "tropipay-mcp-server",
  "version": "0.1.0",
  "description": "A MCP Server to interact with Tropipay Payments Platform",
  "private": true,
  "type": "module",
  "bin": {
    "Tropipay MCP Server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "set DANGEROUSLY_OMIT_AUTH=true && npx @modelcontextprotocol/inspector node build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "@yosle/tropipayjs": "^0.2.1"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.1",
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  }
}
